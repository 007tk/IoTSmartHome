<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/mylogo"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="82dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/app_logo"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="289dp"
        android:background="#F0F4FD"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/motionSensorCV"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="64dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginBottom="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardMaxElevation="2dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:id="@+id/motionIcon"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/motion_icon" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Motion Sensor"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#023047"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/motionSensorStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text="No Motion detected"
                        android:textAlignment="viewStart"
                        android:textColor="#C7C7C7"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/motionSensorBtn"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="265dp"
                        android:layout_marginTop="40dp"
                        android:background="#8AC926"
                        android:fontFamily="@font/montserrat"
                        android:text="Active"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fireSensorCV"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="38dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/fireIcon"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:contentDescription="icon"
                        app:srcCompat="@drawable/fire_icon" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Fire Sensor"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#023047"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fireSensorStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text="No Fire detected"
                        android:textAlignment="viewStart"
                        android:textColor="#C7C7C7"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/fireSensorBtn"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="265dp"
                        android:layout_marginTop="40dp"
                        android:background="#8AC926"
                        android:fontFamily="@font/montserrat"
                        android:text="Active"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/gasSensorCV"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_below="@+id/fireSensorCV"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="38dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        app:srcCompat="@drawable/gas_icon" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Gas Sensor"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#023047"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gasSensorStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text="No Gas detected"
                        android:textAlignment="viewStart"
                        android:textColor="#C7C7C7"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/GasSensorBtn"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="265dp"
                        android:layout_marginTop="40dp"
                        android:background="#8AC926"
                        android:fontFamily="@font/montserrat"
                        android:text="Active"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/faceRecognitionCV"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_below="@+id/gasSensorCV"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="38dp"
                    android:layout_marginBottom="100dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        app:srcCompat="@drawable/face_recognition_icon" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Face Recognition"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#023047"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/faceRecognitionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="76dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/montserrat_light"
                        android:text="No Unknown face detected"
                        android:textAlignment="viewStart"
                        android:textColor="#C7C7C7"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/faceRecognitionStatusBtn"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="265dp"
                        android:layout_marginTop="40dp"
                        android:background="#8AC926"
                        android:fontFamily="@font/montserrat"
                        android:text="Active"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#023047"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/bottom_navigation" />


</RelativeLayout>